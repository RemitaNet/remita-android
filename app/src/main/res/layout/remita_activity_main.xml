<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/remita_initiate_payment_page"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical"
    android:padding="@dimen/medium_padding">

    <ImageView
        android:layout_width="271dp"
        android:layout_height="234dp"
        android:layout_gravity="center"
        android:contentDescription="@string/merchant_item" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="5dp"
        android:paddingTop="25dp"
        android:paddingRight="5dp"
        android:paddingBottom="25dp"
        android:text="Want to quickly see how easy payment should be?
Enter an amount then tap on Pay!"
        android:textAlignment="center"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
        android:textColor="@color/colorBlack" />

    <TextView
        android:id="@+id/amount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/medium_padding"
        android:gravity="center"
        android:text="@string/amount_placeholder"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/large_text"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/et_amount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:hint="Enter Amount"
        android:inputType="numberDecimal"
        android:maxLength="7"
        android:text="100"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/large_text" />

    <Button
        android:id="@+id/button"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:background="@color/colorHapticGreen"
        android:text="PAY"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/medium_padding" />
</LinearLayout>
